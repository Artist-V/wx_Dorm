/*滚动公告*/
@keyframes remindMessage {
  0% {
    -webkit-transform: translateX(90%);
  }

  100% {
    -webkit-transform: translateX(-180%);
  }
}
.notice-wrap {
  background: #ffebda;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  color: #d09868;
  font-size: 28rpx;
}

.tongzhitext {
  position: absolute;
  width: 100%;
  height: 60rpx;
  top: 5rpx;
  margin-right:80rpx;
  margin-left: 10rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  
}

.tongzhi-text {
  position: absolute;
  width: 100%;
  height: 60rpx;
  top: 5rpx;
  font-size: 28rpx;
  animation: remindMessage 14s linear infinite;
  color: #d09868;
  display: block;
}

.closeView {
  width: 45rpx;
  height: 45rpx;
  line-height: 45rpx;
  position: absolute;
  right: 20rpx;
  top: 5rpx;
  text-align: center;
  font-size: 35rpx;
}
